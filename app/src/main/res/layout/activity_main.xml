<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👋 Welcome!"
            android:textColor="#191A1B"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/love_ya_like_a_sister" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:layout_below="@id/tvWelcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnWrite"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textStyle="bold"
            android:text="✍️ Write a Blog"
            android:layout_below="@id/imgLogo"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:fontFamily="@font/love_ya_like_a_sister"
            android:textColor="#191A1B"
            android:background="@drawable/button_border_red" />

        <Button
            android:id="@+id/btnRead"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="📖 Read Blogs"
            android:textStyle="bold"
            android:layout_below="@id/btnWrite"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:fontFamily="@font/love_ya_like_a_sister"
            android:textColor="#191A1B"
            android:background="@drawable/button_border_blue" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Design by\n RN"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:layout_alignParentBottom="true"


            android:fontFamily="@font/love_ya_like_a_sister"
            android:textColor="#0C0C0C"
          />
</RelativeLayout>
